{
  "name": "design-playground",
  "version": "1.0.1",
  "main": "src/index",
  "scripts": {
    "start": "NODE_ENV=development expo start --dev-client --port 7765",
    "android": "NODE_ENV=development expo run:android --port 7765",
    "ios": "NODE_ENV=development expo run:ios --port 7765  --device",
    "web": "NODE_ENV=development expo start --web --port 7765",
    "open:android": "open -a \"Android Studio\" ./android",
    "open:ios": "open -a \"Xcode\" ./ios",
    "test": "jest --watchAll",
    "lint": "expo lint",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "clean": "rimraf dist",
    "predeploy": "expo export -p web",
    "deploy": "NODE_ENV=production yarn clean && yarn predeploy && gh-pages -t -d dist --dest design-playground",
    "serve:static": "serve dist"
  },
  "dependencies": {
    "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
    "@formatjs/intl-datetimeformat": "^6.12.5",
    "@formatjs/intl-displaynames": "^6.6.8",
    "@formatjs/intl-getcanonicallocales": "^2.3.0",
    "@formatjs/intl-listformat": "^7.5.7",
    "@formatjs/intl-locale": "^4.0.0",
    "@formatjs/intl-numberformat": "^8.10.3",
    "@formatjs/intl-pluralrules": "^5.2.14",
    "@formatjs/intl-relativetimeformat": "^11.2.14",
    "@gorhom/bottom-sheet": "^5.1.4",
    "@gorhom/portal": "^1.0.14",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-community/slider": "4.5.6",
    "@react-navigation/drawer": "^7.0.0",
    "@react-navigation/material-bottom-tabs": "^6.2.29",
    "@siteed/design-system": "workspace:^",
    "@siteed/react-native-logger": "workspace:^",
    "date-fns": "^3.6.0",
    "expo": "^53.0.8",
    "expo-constants": "~17.1.6",
    "expo-linking": "~7.1.4",
    "expo-localization": "~16.1.5",
    "expo-router": "~5.0.6",
    "expo-status-bar": "~2.2.3",
    "expo-system-ui": "~5.0.7",
    "i18next": "^23.10.1",
    "intl-pluralrules": "^2.0.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.2",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-localize": "^3.2.1",
    "react-native-paper": "^5.14.0",
    "react-native-paper-dates": "^0.22.25",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.10.0",
    "react-native-vector-icons": "^10.0.3",
    "react-native-web": "^0.20.0",
    "testingui": "workspace:^"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/gh-pages": "^6",
    "@types/react": "~19.0.10",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^8.56.0",
    "eslint-config-universe": "^12.0.0",
    "gh-pages": "^6.1.1",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "serve": "^14.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "resolutions": {
    "@siteed/react-native-logger": "0.8.2"
  },
  "nohoist": [
    "**/@siteed/react-native-logger",
    "**/@siteed/react-native-logger/**"
  ],
  "private": true
}
