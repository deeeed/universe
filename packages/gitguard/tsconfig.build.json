{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": [
      "node"
    ],
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "composite": false,
    "rootDir": "src",
    "paths": {
      "@siteed/gitguard": [
        "./src"
      ]
    },
    "stripInternal": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/__tests__/**",
    "**/__mocks__/**"
  ]
}
