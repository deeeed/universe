{
  "name": "@siteed/gitguard",
  "packageManager": "yarn@4.5.0",
  "version": "0.1.0",
  "description": "GitGuard is a tool that helps you enforce best practices in your Git commit messages.",
  "author": "Arthur Breton <abreton@siteed.net> (https://github.com/deeeed)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/deeeed/universe",
    "directory": "packages/gitguard"
  },
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": "./dist/src/cli/gitguard.js",
  "files": [
    "dist",
    "package.json",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "yarn build:tsc",
    "build:clean": "yarn clean && yarn build",
    "build:tsc": "tsc --project tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.test.json --noEmit && tsc -p tsconfig.json --noEmit",
    "test": "jest",
    "lint": "eslint \"**/*.ts\"",
    "lint:fix": "eslint \"**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"bin/**/*.ts\"",
    "link": "yarn link",
    "test:e2e": "NODE_OPTIONS='--loader ts-node/esm --experimental-specifier-resolution=node' ts-node --esm ./scripts/test-commit-hooks.ts",
    "postbuild": "chmod +x ./dist/src/cli/gitguard.js",
    "link-cli": "yarn link && yarn run postbuild",
    "gitguard": "ts-node ./bin/gitguard.ts",
    "setup": "./setup-cli.sh",
    "unsetup": "yarn global unlink"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "commander": "^11.1.0",
    "inquirer": "^8.2.6",
    "openai": "^4.70.2"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@siteed/publisher": "workspace:^",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  }
}
