{
  "name": "@siteed/gitguard",
  "packageManager": "yarn@4.5.0",
  "version": "0.3.2",
  "description": "GitGuard is a tool that helps you enforce best practices in your Git commit messages.",
  "author": "Arthur Breton <abreton@siteed.net> (https://github.com/deeeed)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/deeeed/universe",
    "directory": "packages/gitguard"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "type": "module",
  "bin": "./dist/cjs/cli/gitguard.cjs",
  "files": [
    "dist",
    "package.json",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "build:bundle": "rollup -c rollup.config.mjs && yarn build:types",
    "build": "yarn clean && yarn build:bundle && yarn postbuild",
    "build:clean": "yarn clean && yarn build",
    "build:types": "tsc --project tsconfig.types.json",
    "typecheck": "tsc -p tsconfig.test.json --noEmit && tsc -p tsconfig.json --noEmit",
    "test": "jest",
    "test:e2e:commit:basic": "NODE_OPTIONS='--loader ts-node/esm' ts-node --esm ./e2e/index.ts --tests=commit-message --scenario=basic-formatting",
    "test:e2e:commit:monorepo": "NODE_OPTIONS='--loader ts-node/esm' ts-node --esm ./e2e/index.ts --tests=commit-message --scenario=monorepo-detection",
    "test:e2e:commit:multi": "NODE_OPTIONS='--loader ts-node/esm' ts-node --esm ./e2e/index.ts --tests=commit-message --scenario=multi-package",
    "test:e2e:security:secrets": "NODE_OPTIONS='--loader ts-node/esm' ts-node --esm ./e2e/index.ts --tests=security --scenario=secrets-detection",
    "test:e2e:security:tokens": "NODE_OPTIONS='--loader ts-node/esm' ts-node --esm ./e2e/index.ts --tests=security --scenario=token-detection",
    "test:e2e:ai:basic": "NODE_OPTIONS='--loader ts-node/esm' ts-node --esm ./e2e/index.ts --tests=ai-suggestions --scenario=basic-suggestions",
    "test:e2e:ai:complex": "NODE_OPTIONS='--loader ts-node/esm' ts-node --esm ./e2e/index.ts --tests=ai-suggestions --scenario=complex-suggestions",
    "test:e2e:large:size": "NODE_OPTIONS='--loader ts-node/esm' ts-node --esm ./e2e/index.ts --tests=large-commits --scenario=size-detection",
    "test:e2e:large:files": "NODE_OPTIONS='--loader ts-node/esm' ts-node --esm ./e2e/index.ts --tests=large-commits --scenario=many-files",
    "test:e2e:i": "NODE_OPTIONS='--loader ts-node/esm' ts-node --esm ./e2e/index.ts --interactive ",
    "test:e2e": "NODE_OPTIONS='--loader ts-node/esm' ts-node --esm ./e2e/index.ts",
    "lint": "eslint \"**/*.ts\"",
    "lint:fix": "eslint \"**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"bin/**/*.ts\"",
    "postbuild": "NODE_OPTIONS='--loader ts-node/esm' ts-node --esm ./scripts/post-build.ts",
    "dev": "NODE_OPTIONS='--loader ts-node/esm' ts-node --esm ./src/cli/gitguard.ts",
    "setup": "./setup-cli.sh",
    "unsetup": "./uninstall-cli.sh"
  },
  "dependencies": {
    "@octokit/rest": "^21.0.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "inquirer": "^12.0.1",
    "js-tiktoken": "^1.0.15",
    "openai": "^4.70.2"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@siteed/publisher": "workspace:^",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "rimraf": "^5.0.5",
    "rollup": "^4.12.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./cli": {
      "types": "./dist/types/cli/gitguard.d.ts",
      "import": "./dist/esm/cli/gitguard.js",
      "require": "./dist/cjs/cli/gitguard.cjs"
    }
  },
  "preferUnplugged": true
}
