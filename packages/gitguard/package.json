{
  "name": "@siteed/gitguard",
  "packageManager": "yarn@4.5.0",
  "version": "0.4.3",
  "description": "GitGuard is a tool that helps you enforce best practices in your Git commit messages.",
  "author": "Arthur Breton <abreton@siteed.net> (https://github.com/deeeed)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/deeeed/universe",
    "directory": "packages/gitguard"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "type": "module",
  "bin": "./dist/cjs/cli/gitguard.cjs",
  "files": [
    "dist",
    "package.json",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "build:bundle": "rollup -c rollup.config.mjs && yarn build:types",
    "build": "yarn clean && yarn build:bundle && yarn postbuild",
    "build:clean": "yarn clean && yarn build",
    "build:types": "tsc --project tsconfig.types.json",
    "typecheck": "tsc -p tsconfig.test.json --noEmit && tsc -p tsconfig.json --noEmit",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' node --import './src/register.mjs' node_modules/jest/bin/jest.js --config jest.config.cjs --selectProjects unit",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' node --import './src/register.mjs' node_modules/jest/bin/jest.js --config jest.config.cjs --selectProjects unit",
    "test:unit:watch": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' node --import './src/register.mjs' node_modules/jest/bin/jest.js --config jest.config.cjs --selectProjects unit --watch",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' node --import './src/register.mjs' node_modules/jest/bin/jest.js --config jest.config.cjs --selectProjects integration",
    "test:integration:watch": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' node --import './src/register.mjs' node_modules/jest/bin/jest.js --config jest.config.cjs --selectProjects integration --watch",
    "test:all": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' node --import './src/register.mjs' node_modules/jest/bin/jest.js --config jest.config.cjs --selectProjects unit integration",
    "test:e2e": "node --import './src/register.mjs' ./e2e/index.ts --interactive",
    "test:e2e:init:basic": "node --import './src/register.mjs' ./e2e/index.ts --tests=init --scenario=init-basic",
    "test:e2e:init:global": "node --import './src/register.mjs' ./e2e/index.ts --tests=init --scenario=init-global",
    "test:e2e:init:monorepo": "node --import './src/register.mjs' ./e2e/index.ts --tests=init --scenario=init-monorepo",
    "test:e2e:template:init": "node --import './src/register.mjs' ./e2e/index.ts --tests=template --scenario=template-init-basic",
    "test:e2e:template:validate": "node --import './src/register.mjs' ./e2e/index.ts --tests=template --scenario=template-validate-valid",
    "test:e2e:template:invalid": "node --import './src/register.mjs' ./e2e/index.ts --tests=template --scenario=template-validate-invalid",
    "test:e2e:template:list": "node --import './src/register.mjs' ./e2e/index.ts --tests=template --scenario=template-list",
    "test:e2e:template:custom": "node --import './src/register.mjs' ./e2e/index.ts --tests=template --scenario=template-custom-path",
    "test:e2e:status:basic": "node --import './src/register.mjs' ./e2e/index.ts --tests=status --scenario=status-basic",
    "test:e2e:status:global": "node --import './src/register.mjs' ./e2e/index.ts --tests=status --scenario=status-global",
    "test:e2e:status:local": "node --import './src/register.mjs' ./e2e/index.ts --tests=status --scenario=status-local",
    "test:e2e:status:ai": "node --import './src/register.mjs' ./e2e/index.ts --tests=status --scenario=status-with-ai",
    "test:e2e:status:show": "node --import './src/register.mjs' ./e2e/index.ts --tests=status --scenario=status-show-command",
    "test:e2e:commit:basic": "node --import './src/register.mjs' ./e2e/index.ts --tests=commit-message --scenario=basic-formatting",
    "test:e2e:commit:monorepo": "node --import './src/register.mjs' ./e2e/index.ts --tests=commit-message --scenario=monorepo-detection",
    "test:e2e:commit:multi": "node --import './src/register.mjs' ./e2e/index.ts --tests=commit-message --scenario=multi-package",
    "test:e2e:security:secrets": "node --import './src/register.mjs' ./e2e/index.ts --tests=security --scenario=secrets-detection",
    "test:e2e:security:tokens": "node --import './src/register.mjs' ./e2e/index.ts --tests=security --scenario=token-detection",
    "test:e2e:security:branch": "node --import './src/register.mjs' ./e2e/index.ts --tests=security --scenario=branch-security",
    "test:e2e:ai:basic": "node --import './src/register.mjs' ./e2e/index.ts --tests=ai-suggestions --scenario=commit-ai-basic",
    "test:e2e:ai:large": "node --import './src/register.mjs' ./e2e/index.ts --tests=ai-suggestions --scenario=commit-ai-large",
    "test:e2e:ai:complex": "node --import './src/register.mjs' ./e2e/index.ts --tests=ai-suggestions --scenario=complex-commit-split",
    "test:e2e:ai:branch": "node --import './src/register.mjs' ./e2e/index.ts --tests=ai-suggestions --scenario=branch-ai-analyze",
    "test:e2e:ai:pr": "node --import './src/register.mjs' ./e2e/index.ts --tests=ai-suggestions --scenario=branch-ai-pr",
    "test:e2e:ai:split": "node --import './src/register.mjs' ./e2e/index.ts --tests=ai-suggestions --scenario=branch-ai-split",
    "test:e2e:large:size": "node --import './src/register.mjs' ./e2e/index.ts --tests=large-commits --scenario=size-detection",
    "test:e2e:large:files": "node --import './src/register.mjs' ./e2e/index.ts --tests=large-commits --scenario=many-files",
    "test:e2e:branch:split": "node --import './src/register.mjs' ./e2e/index.ts --tests=branch-features --scenario=branch-split-suggestion",
    "test:e2e:branch:template": "node --import './src/register.mjs' ./e2e/index.ts --tests=branch-features --scenario=pr-template-parsing",
    "test:e2e:branch:complex": "node --import './src/register.mjs' ./e2e/index.ts --tests=branch-features --scenario=complex-branch-split",
    "lint": "eslint \"**/*.ts\"",
    "lint:fix": "eslint \"**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"bin/**/*.ts\"",
    "postbuild": "node --import './src/register.mjs' ./scripts/post-build.ts",
    "dev": "node --import './src/register.mjs' ./src/cli/gitguard.ts",
    "setup": "./setup-cli.sh",
    "unsetup": "./uninstall-cli.sh"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.1.0",
    "@octokit/rest": "^21.0.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "handlebars": "^4.7.8",
    "js-tiktoken": "^1.0.15",
    "jsonc-parser": "^3.3.1",
    "minimatch": "^10.0.1",
    "openai": "^4.70.2",
    "yaml": "^2.6.0"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@siteed/publisher": "workspace:^",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-regexp": "^2.6.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.12.0",
    "rollup-plugin-copy": "^3.5.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./cli": {
      "types": "./dist/types/cli/gitguard.d.ts",
      "import": "./dist/esm/cli/gitguard.js",
      "require": "./dist/cjs/cli/gitguard.cjs"
    }
  },
  "preferUnplugged": true
}
